import Config

# Required: Your DocuSign OAuth credentials
config :ueberauth, Ueberauth.Strategy.DocuSign.OAuth,
  client_id: "YOUR_INTEGRATION_KEY_HERE",
  client_secret: "YOUR_SECRET_KEY_HERE"

# Optional: Override default settings for testing
config :ueberauth, Ueberauth,
  providers: [
    docusign: {
      Ueberauth.Strategy.DocuSign,
      [
        # Use "demo" for sandbox, "production" for production
        environment: "demo",
        # Default OAuth scopes - adjust as needed
        default_scope: "signature extended",
        # Optional: Add login_hint if testing with specific account
        # login_hint: "user@example.com"
      ]
    }
  ]

